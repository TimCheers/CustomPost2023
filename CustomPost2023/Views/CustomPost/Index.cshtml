@using CustomPost2023.Data.Models
@{
    ViewBag.Title = "Список таможенных пунктов";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* Add your CSS styles here */
    .content {
        margin: 20px;
    }

    form {
        margin-bottom: 20px;
    }

    input[type="text"] {
        width: 200px;
        padding: 8px;
        margin-right: 10px;
    }

    input[type="submit"],
    button {
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button {
        margin-top: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
<div class="content">
    <h2>Список таможенных пунктов</h2>
    <form method="get">
        <div>
            <input type="text" placeholder="Введите название" name="nameStr">
            <input type="text" placeholder="Введите локацию" name="locStr">
            <input type="text" placeholder="Введите проп. способ." name="thrStr">
            <input type="text" placeholder="Введите ID" name="vehStr">
            
            <input type="submit" value="Фильтр" />
        </div>
    </form>
    <p>
        <button type="button" onclick="location.href='@Url.Action("Create")'">Добавить таможенный пункт</button>
    </p>
    <table class="table">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.IdSort">
                    ID
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.nameSort">
                    Название
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.massSort">
                    Локация
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.countSort">
                    Пропускная способность
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.priceSort">
                    ID транспорта доставки
                </a>
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.st.customs_post_id</td>
                <td>@item.st.customs_post_title</td>
                <td>@item.st.location</td>
                <td>@item.st.throughput</td>
                <td>@item.st.fk_vehicle_id</td>
                <td>
                    <a asp-action="Edit" asp-controller="CustomPost" asp-route-id="@item.st.customs_post_id">Изменить</a>
                </td>
                <td>
                    <form asp-controller="CustomPost" asp-action="Delete" method="post" asp-route-id="@item.st.customs_post_id">
                        <input type="submit" value="Удалить" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
