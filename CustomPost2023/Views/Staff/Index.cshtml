@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using CustomPost2023.Data.Models
@* @model IEnumerable<CustomPost2023.Data.Models.staff> *@
@{
    ViewBag.Title = "Список персонала";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div class="content">
    <h2>Список персонала</h2>
    <p><a asp-action="Create">Добавить пользователя</a></p>
    <table class="table">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.IdSort">
                    ID
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">
                    ФИО
                </a>
            </th>
            <th>Возраст</th>
            <th>Опыт работы</th>
            <th>ID ТП</th>
            <th>Должность</th>
            <th>Номер телефона</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.st.id</td>
                <td>@item.st.name</td>
                <td>@item.st.age</td>
                <td>@item.st.work_experience</td>
                <td>@item.cp.customs_post_title</td>
                <td>@item.st.job_title</td>
                <td>@item.st.phone_number</td>
                <td>
                    <a asp-action="Edit" asp-controller="Staff" asp-route-id="@item.st.id">Изменить</a>
                </td>
                <td>
                    <form asp-controller="Staff" asp-action="Delete" method="post" asp-route-id="@item.st.id">
                        <input type="submit" value="Удалить" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>