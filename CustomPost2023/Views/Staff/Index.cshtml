@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using CustomPost2023.Data.Models
@* @model IEnumerable<CustomPost2023.Data.Models.staff> *@
@{
    ViewBag.Title = "Список персонала";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div class="content">
    <h2>Список персонала</h2>
    <p><a asp-action="Create">Добавить пользователя</a></p>
    <form method="get">
        <div>
            <input type="text" placeholder="Введите имя" name="name">
            <input type="text" placeholder="Введите возраст" name="ageStr">
            <input type="text" placeholder="Введите опыт" name="expStr">
            <input type="text" placeholder="Введите название" name="tpStr">
            <input type="text" placeholder="Введите должность" name="posStr">
            <input type="text" placeholder="Введите номер" name="phoneStr">
            
            <input type="submit" value="Фильтр" />
        </div>
    </form>
    <table class="table">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.IdSort">
                    ID
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">
                    ФИО
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.AgeSort">
                    Возраст
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.work_experienceSort">
                    Опыт работы
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.customs_post_titleSort">
                    Название таможенного пункта
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.job_titleSort">
                    Должность
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.phone_numberSort">
                    Номер телефона
                </a>
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.st.id</td>
                <td>@item.st.name</td>
                <td>@item.st.age</td>
                <td>@item.st.work_experience</td>
                <td>@item.cp.customs_post_title</td>
                <td>@item.st.job_title</td>
                <td>@item.st.phone_number</td>
                <td>@item.st.email</td>
                <td>@item.st.password</td>
                <td>
                    <a asp-action="Edit" asp-controller="Staff" asp-route-id="@item.st.id">Изменить</a>
                </td>
                <td>
                    <form asp-controller="Staff" asp-action="Delete" method="post" asp-route-id="@item.st.id">
                        <input type="submit" value="Удалить" />
                    </form>
                </td>
                <td>
                    <form asp-controller="StaffNative" asp-action="Index" method="post" asp-route-id="@item.st.id">
                        <input type="submit" value="Просмотр" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>