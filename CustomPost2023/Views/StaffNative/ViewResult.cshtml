@using CustomPost2023.ViewModels
@model CustomPost2023.ViewModels.ApplicationViewModel
@{
    ViewBag.Title = "Заявка " + Model.app_app.id + " " + Model.app_product.product_title;
    // Layout = "/Views/Shared/_TaskLayout.cshtml";
}
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
            text-align: center;
        }

        .form-container {
            display: flex;
            max-width: 90%;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .left-block, .right-block {
            width: 48%;
            padding: 10px;
            box-sizing: border-box;
            text-align: left;
            display: block;
        }

        .right-block {
            margin-left: 2%;
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        textarea {
            height: 100px;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
        }

        .btn {
            padding: 10px;
            width: 48%;
            border: none;
            cursor: pointer;
        }

        .approve {
            background-color: #4caf50;
            color: #fff;
        }

        .reject {
            background-color: #f44336;
            color: #fff;
        }

        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            bottom: 0;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            font-weight: normal; /* Уменьшаем жирность шрифта */
        }

        th {
            background-color: #f2f2f2;
        }

        .navbar {
            background-color: #3498db; /* Цвет фона навбара */
            color: #fff; /* Цвет текста навбара */
            padding: 15px; /* Внутренний отступ */
            border-radius: 5px; /* Скругление углов */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Тень */
        }

        /* Стиль для бренда (левая часть навбара) */
        .navbar-brand {
            font-size: 24px; /* Размер шрифта бренда */
            font-weight: bold; /* Жирный шрифт */
        }

        /* Стиль для навигационных элементов */
        .navbar-nav .nav-item {
            margin-right: 15px; /* Отступ между элементами навбара */
        }

        /* Стиль для кнопок */
        .nav-button {
            background-color: #2ecc71; /* Цвет фона кнопок */
            color: #fff; /* Цвет текста кнопок */
            padding: 8px 15px; /* Внутренний отступ кнопок */
            border: none; /* Убираем границу кнопок */
            border-radius: 3px; /* Скругление углов кнопок */
            cursor: pointer; /* Курсор при наведении на кнопки */
        }

            /* Стиль для кнопок при наведении */
            .nav-button:hover {
                background-color: #27ae60; /* Измененный цвет фона при наведении */
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Главная</a>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <form asp-controller="StaffNative" asp-action="ViewAllTasks" method="post" asp-route-id="@Model.app_staff.id">
                        <input type="submit" value="Все заявки" class="nav-button" />
                    </form>
                </li>
                <li class="nav-item">
                    <form asp-controller="StaffNative" asp-action="Index" method="post" asp-route-id="@Model.app_staff.id">
                        <input type="submit" value="Личный кабинет" class="nav-button" />
                    </form>
                </li>
                <li class="nav-item">
                    <form asp-controller="Home" asp-action="Index" method="post" asp-route-id="@Model.app_staff.id">
                        <input type="submit" value="Выход" class="nav-button" />
                    </form>
                </li>
            </ul>
        </div>
    </nav>
    <h2 class="mainh2">Подтверждение акта досмотра</h2>
    <div class="form-container">
        <div class="left-block">
            <label for="productCode">Код товара: <p style="color:blue">@Model.app_product.product_id</p></label>
            <label for="productName">Тип товара: <p style="color:blue">@Model.app_prod_type.type_product_title</p></label>
            <label for="exporter">Экспортер: <p style="color:blue">@Model.app_user.user_name</p></label>
            <label for="transportType">Вид транспорта доставки: <p style="color:blue">@Model.app_vehicle_type.vehicle_type_title</p></label>
            <label for="declaredWeight">Характиристики товара товара: <p style="color:blue">(ДОБАВИТЬ ВО ВЬЮШКУ)</p></label>
            <label for="declaredWeight">Заявленное количество товара: <p style="color:blue">@Model.app_product.mass</p></label>
        </div>
        <div class="right-block">
            <label for="productName">Наименование товара: <p style="color:blue">@Model.app_product.product_title</p></label>
            <label for="productDescription">Описание товара: <p style="color:blue">(ДОБАВИТЬ В БД)</p></label>
            <label for="exportCountry">Страна экспорта: <p style="color:blue">@Model.app_export_country.country_title</p></label>
            <label for="customsPoint">Таможенный пункт проверки: <p style="color:blue">@Model.app_custom_post.customs_post_title</p></label>
            <label for="declaredWeight">Заявленная масса товара: <p style="color:blue">@Model.app_product.mass кг</p></label>
        </div>
    </div>
</body>
<footer class="mt-5">
    <div class="container text-center">
        <p>&copy; 2023 Ваше название компании. Все права защищены.</p>
        <p>Адрес: г. Ваш город, улица Ваша улица, телефон: +7 (XXX) XXX-XX-XX</p>
    </div>
</footer>