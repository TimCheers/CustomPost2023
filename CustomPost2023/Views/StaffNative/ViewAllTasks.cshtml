@{
    ViewBag.Title = "Текущие заявки";
    Layout = "/Views/Shared/_StaffLayout.cshtml";
}
@using CustomPost2023.ViewModels
@model CustomPost2023.ViewModels.StaffViewModel
<style>
    body {
        padding: 20px;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
    }
</style>
<body>
    <div class="container">
        <h2 class="mt-4">Список заявок</h2>

        <table class="table table-bordered table-striped mt-3">
            <thead>
                <tr>
                    <th>Дата</th>
                    <th>Вид груза</th>
                    <th>Наименование груза</th>
                    <th>Масса груза</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>

                @{
                    List<DateOnly> applicationDates = new List<DateOnly>();
                    foreach (ApplicationViewModel item in Model.applications)
                    {
                        if (!applicationDates.Contains(item.app_history.custom_date))
                        {
                            applicationDates.Add(item.app_history.custom_date);
                            <p>qwertyuio</p>
                        }
                    }
                    List<StaffViewModel> stlist = new List<StaffViewModel>();
                    for (int i = 0; i < applicationDates.Count; i++)
                    {
                        int datesCount = Model.applications.Where(p => p.app_history.custom_date == applicationDates[i]).Count();

                        @if (datesCount > 1)
                        {
                        <td rowspan="@datesCount">@applicationDates[i]</td>
                            @foreach (ApplicationViewModel item in Model.applications)
                            {
                            <tr>
                                if (item.app_history.custom_date == applicationDates[i])
                                {
                                <td>@item.app_prod_type.type_product_title</td>
                                <td>@item.app_product.product_title</td>
                                <td>@item.app_product.mass</td>
                                <td>@item.app_status.status_title</td>
                                <td><button class="btn btn-success" onclick="completeRequest(this)">Выполнить</button></td>
                                }
                            </tr>
                            }
                        }


                    }
                }

            <tr>
                <td>Паллеты</td>
                <td>300 кг</td>
                <td>Грузовой склад №2</td>
                <td>Выполнено</td>
                <td><button class="btn btn-success" disabled>Выполнить</button></td>
            </tr>
            <tr>
                <td>2023-01-05</td>
                <td>Ящики</td>
                <td>200 кг</td>
                <td>Грузовой склад №3</td>
                <td>В обработке</td>
                <td><button class="btn btn-success" onclick="completeRequest(this)">Выполнить</button></td>
            </tr>
            <!-- Добавьте дополнительные строки, если необходимо -->
            </tbody>
        </table>
    </div>
</body>