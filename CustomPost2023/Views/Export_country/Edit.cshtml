@model CustomPost2023.Data.Models.export_countries
@{
    ViewBag.Title = "Изменение страны";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div class="content">
    <h2>РЕдактирование страны</h2>
    <form asp-action="Edit" asp-controller="Export_country">
        <div asp-validation-summary="All">
            <p>
                <label asp-for="country_title">Название страны</label><br />
                <input type="text" asp-for="country_title" />
            </p>
            <p>
                <input type="submit" value="Отправить" />
            </p>
            <input type="hidden" asp-for="id" />
        </div>
    </form>
</div>