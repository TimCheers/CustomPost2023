@page
@{
    Layout = null;
}
@using CustomPost2023.ViewModels
@model CustomPost2023.ViewModels.UserViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        form {
            max-width: 800px;
            margin: auto;
        }

        label {
            display: block;
            margin-top: 10px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
    <title>Заявка на оформление таможенной декларации</title>
</head>
<body>

    <div class="container">
        <form>
            <h2 class="mt-4 mb-4">Заявка на оформление таможенной декларации</h2>

            <!-- Информация о грузе -->
            <div class="form-group">
                <label asp-for="new_application.app_product.description" for="cargoDescription">Информация о грузе (Описание):</label>
                <textarea asp-for="new_application.app_product.description" class="form-control" id="cargoDescription" name="cargoDescription" rows="4" required></textarea>
            </div>

            <div class="form-group">
                <label asp-for="new_application.app_product.quantity" for="quantity">Количество товаров:</label>
                <input asp-for="new_application.app_product.quantity" type="number" class="form-control" id="quantity" name="quantity" required>
            </div>

            <div class="form-group">
                <label for="cost">Стоимость товаров:</label>
                <input asp-for="new_application.app_product.price" type="text" class="form-control" id="cost" name="cost" required>
            </div>

            <div class="form-group">
                <label for="weight">Вес груза:</label>
                <input asp-for="new_application.app_product.mass" type="text" class="form-control" id="weight" name="weight" required>
            </div>

            <div class="form-group">
                <label for="dimensions">Характеристики груза:</label>
                <input asp-for="new_application.app_product.characteristics" type="text" class="form-control" id="dimensions" name="dimensions" required>
            </div>

            <!-- Данные о отправителе и получателе -->
            <h3>Данные о отправителе и получателе</h3>

            <div class="form-group">
                <label for="senderName">Полное наименование отправителя:</label>
                <input value="@Model.User.user_name" disabled="disabled" type="text" class="form-control" id="senderName" name="senderName" required>
            </div>

            <div class="form-group">
                <label for="senderAddress">Адрес отправителя:</label>
                <textarea class="form-control" id="senderAddress" name="senderAddress" rows="4" required></textarea>
            </div>

            <div class="form-group">
                <label for="senderContact">Контактная информация отправителя:</label>
                <input type="text" class="form-control" id="senderContact" name="senderContact" required>
            </div>

            <!-- Данные о транспортном средстве -->
            <h3>Данные о транспортном средстве</h3>

            <div class="form-group">
                <label for="vehicleNumber">Номер регистрации транспортного средства:</label>
                <input type="text" class="form-control" id="vehicleNumber" name="vehicleNumber" required>
            </div>

            <div class="form-group">
                <label for="vehicleMake">Марка транспортного средства:</label>
                <input type="text" class="form-control" id="vehicleMake" name="vehicleMake" required>
            </div>

            <div class="form-group">
                <label for="vehicleModel">Модель транспортного средства:</label>
                <input type="text" class="form-control" id="vehicleModel" name="vehicleModel" required>
            </div>

            <!-- Документы -->
            <h3>Документы</h3>

            <div class="form-group">
                <label for="ownershipDocuments">Документы, подтверждающие право собственности:</label>
                <textarea class="form-control" id="ownershipDocuments" name="ownershipDocuments" rows="4" required></textarea>
            </div>

            <!-- Информация о таможенной стоимости -->
            <h3>Информация о таможенной стоимости</h3>

            <div class="form-group">
                <label for="customsValue">Таможенная стоимость товаров:</label>
                <input type="text" class="form-control" id="customsValue" name="customsValue" required>
            </div>

            <div class="form-group">
                <label for="customsDuties">Таможенные пошлины и налоги:</label>
                <textarea class="form-control" id="customsDuties" name="customsDuties" rows="4" required></textarea>
            </div>

            <!-- Дополнительные сведения -->
            <h3>Дополнительные сведения</h3>

            <div class="form-group">
                <label for="additionalInfo">Дополнительные сведения:</label>
                <textarea class="form-control" id="additionalInfo" name="additionalInfo" rows="4" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Отправить заявку</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
