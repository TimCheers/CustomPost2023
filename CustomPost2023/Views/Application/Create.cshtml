@model CustomPost2023.Data.Models.application
@{
    ViewBag.Title = "Создание заявки";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div class="content">
    <h2>Добавление заявки</h2>
    <form asp-action="Create" asp-controller="Application">
        <p>
            <label asp-for="product_id">ID продукта</label><br />
            <input type="number" asp-for="product_id" />
        </p>
        <p>
            <label asp-for="custom_post_id">ID таможенного поста</label><br />
            <input type="number" asp-for="custom_post_id" />
        </p>
        <p>
            <label asp-for="staff_id">ID сотрудника таможни</label><br />
            <input type="number" asp-for="staff_id" />
        </p>
        <p>
            <label asp-for="status_id">ID статуса</label><br />
            <input type="number" asp-for="status_id" />
        </p>
        <p>
            <label asp-for="user_id">ID пользователя</label><br />
            <input type="number" asp-for="user_id" />
        </p>
        <p>
            <label asp-for="export_country_id">ID страны экспорта</label><br />
            <input type="number" asp-for="export_country_id" />
        </p>
        <p>
            <input type="submit" value="Отправить" />
        </p>
    </form>
</div>