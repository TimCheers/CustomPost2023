@using CustomPost2023.Data.Models
@{
    ViewBag.Title = "Список пользователей";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* Add your CSS styles here */
    .content {
        margin: 20px;
    }

    form {
        margin-bottom: 20px;
    }

    input[type="text"] {
        width: 200px;
        padding: 8px;
        margin-right: 10px;
    }

    input[type="submit"],
    a.button {
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

    a.button:hover {
        background-color: #45a049;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
<div class="content">
    <h2>Список пользователей</h2>
    <form method="get">
        <div>
            <input type="text" placeholder="Введите имя" name="nameStr">
            <input type="text" placeholder="Введите логин" name="loginStr">
            <input type="text" placeholder="Введите пароль" name="passStr">
            <input type="text" placeholder="Введите роль" name="roleStr">
            
            <input type="submit" value="Фильтр" />
        </div>
    </form>
    <p><a asp-action="Create" class="button">Добавить пользователя</a></p>
    <table class="table">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.IdSort">
                     ID
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.nameSort">
                     Имя
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.loginSort">
                     Login
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.passSort">
                     Password
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.roleSort">
                     Role
                </a>
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.st.user_id</td>
                <td>@item.st.user_name</td>
                <td>@item.st.login</td>
                <td>@item.st.password</td>
                <td>@item.st.role</td>
                <td>
                    <a asp-action="Edit" asp-controller="User" asp-route-id="@item.st.user_id" class="button">Изменить</a>
                </td>
                <td>
                    <form asp-controller="User" asp-action="Delete" method="post" asp-route-id="@item.st.user_id">
                        <input type="submit" value="Удалить" class="button" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
